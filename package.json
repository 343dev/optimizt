{
  "name": "@343dev/optimizt",
  "version": "8.0.0",
  "description": "CLI image optimization tool",
  "keywords": [
    "svg",
    "png",
    "jpeg",
    "gif",
    "webp",
    "avif",
    "image-compression",
    "sharp",
    "svgo",
    "gifsicle",
    "guetzli",
    "gif2webp"
  ],
  "license": "MIT",
  "author": "Andrey Warkentin (https://github.com/343dev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/343dev/optimizt"
  },
  "exports": "./index.js",
  "bin": {
    "optimizt": "./cli.js"
  },
  "files": [
    "MIGRATION.md",
    "cli.js",
    "index.js",
    "lib/",
    "svgo/",
    ".optimiztrc.cjs"
  ],
  "scripts": {
    "lint": "npx eslint ./",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest tests",
    "update-git-hooks": "npx simple-git-hooks"
  },
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "cli-progress": "^3.11.0",
    "commander": "^12.1.0",
    "exec-buffer": "^3.2.0",
    "fast-glob": "^3.3.2",
    "gif2webp-bin": "^5.0.0",
    "gifsicle": "^7.0.0",
    "guetzli": "^5.0.0",
    "p-limit": "^6.1.0",
    "sharp": "^0.33.4",
    "svgo": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-xo": "^0.45.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "env": {
      "es2024": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "xo",
      "plugin:unicorn/recommended",
      "plugin:import/recommended"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "unicorn/no-array-reduce": "off",
      "capitalized-comments": "off",
      "no-warning-comments": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  }
}
