{
  "name": "@funboxteam/optimizt",
  "version": "3.1.0",
  "description": "CLI image optimization tool",
  "license": "MIT",
  "author": "Andrey Ivanov (https://github.com/343dev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/funbox/optimizt"
  },
  "main": "index.js",
  "bin": {
    "optimizt": "./cli.js"
  },
  "files": [
    "MIGRATION.md",
    "cli.js",
    "index.js",
    "lib/",
    "svgo/"
  ],
  "scripts": {
    "lint-src": "eslint --cache --config .eslintrc.js --ignore-pattern 'tests/*' ./",
    "lint-tests": "eslint --config tests/.eslintrc.js --cache tests/",
    "lint": "npm run lint-src && npm run lint-tests",
    "prepublishOnly": "lawyer",
    "test": "jest tests-jest",
    "test-mocha": "mocha tests",
    "update-git-hooks": "npx simple-git-hooks"
  },
  "dependencies": {
    "cli-progress": "^3.10.0",
    "commander": "^8.3.0",
    "exec-buffer": "^3.2.0",
    "fast-glob": "^3.2.11",
    "gif2webp-bin": "^3.0.3",
    "gifsicle": "^5.3.0",
    "guetzli": "^3.0.2",
    "jpegoptim-bin": "^6.0.1",
    "p-limit": "^3.1.0",
    "sharp": "^0.29.3",
    "svgo": "2.6.1"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "^7.1.0",
    "eslint": "^7.32.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.1",
    "mocha": "^9.2.0",
    "simple-git-hooks": "^2.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "!(tests)/**/*.js": [
      "eslint --fix --cache --config .eslintrc.js"
    ],
    "./*.js": [
      "eslint --fix --cache --config .eslintrc.js"
    ],
    "tests/**/*.js": [
      "eslint --fix --cache --config tests/.eslintrc.js"
    ]
  }
}
